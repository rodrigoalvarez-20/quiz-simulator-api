  "bugs": {
    "url": "https://github.com/rodrigoalvarez-20/quiz-simulator-api/issues"
  },
  "homepage": "https://github.com/rodrigoalvarez-20/quiz-simulator-api#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.9.20",
    "mongoose-simple-random": "^0.4.1",
